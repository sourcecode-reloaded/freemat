!include <..\..\make.inc>
 
#######################################################################
#
#  Sample Windows NT Makefile (Digital Fortran)
#
#  This makefile creates the test programs for the BLAS 2 routines.
#  The test files are grouped as follows:
#       SBLAT2 -- Single precision real test routines
#       CBLAT2 -- Single precision complex test routines
#       DBLAT2 -- Double precision real test routines
#       ZBLAT2 -- Double precision complex test routines
#
#  Test programs can be generated for all or some of the four different
#  precisions.  To create the test programs, enter make followed by one
#  or more of the precisions desired.  Some examples:
#       make single
#       make single complex
#       make single double complex complex16
#  Alternatively, the command
#       make
#  without any arguments creates all four test programs.
#  The executable files which are created are called
#    ../xblat2s.exe, ../xblat2d.exe, ../xblat2c.exe, and ../xblat2z.exe
#
#  To remove the object files after the executable files have been
#  created, enter
#       make clean
#
#######################################################################

.SUFFIXES: .f .obj .exe .lib

SBLAT2 = sblat2.obj 

CBLAT2 = cblat2.obj 

DBLAT2 = dblat2.obj 

ZBLAT2 = zblat2.obj

all:  single double complex complex16

single: ..\xblat2s.exe
double: ..\xblat2d.exe
complex: ..\xblat2c.exe
complex16: ..\xblat2z.exe

..\xblat2s.exe: $(SBLAT2)
	$(LOADER) $(LOADOPTS) -exe:$@ $(SBLAT2) $(BLASLIB)

..\xblat2c.exe: $(CBLAT2) 
	$(LOADER) $(LOADOPTS) -exe:$@ $(CBLAT2) $(BLASLIB)
 
..\xblat2d.exe: $(DBLAT2) 
	$(LOADER) $(LOADOPTS) -exe:$@ $(DBLAT2) $(BLASLIB)
 
..\xblat2z.exe: $(ZBLAT2) 
	$(LOADER) $(LOADOPTS) -exe:$@ $(ZBLAT2) $(BLASLIB)
 
clean:
	del *.obj
 
.f.obj: 
	$(FORTRAN) $(OPTS) -c $*.f
